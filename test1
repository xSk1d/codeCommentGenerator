CCounter::CCounter()
{
    m_value = 0;
  // end of "what is this why is it asking if this is tnd of a function"



void CCounter::Increment()
{
    m_value++;
  // end of "again askin"



int CCounter::GetValue()
{
    return m_value;
  // end of "idk"





// ==== addnumber ==============================================================
